mixin videoDisplay(video)
  div
    h3.video-title #{video.title}
    h4.video-author #{video.submitterName}
    <iframe width="560" height="315" src="//www.youtube.com/embed/#{video.youtubeVideoID}" frameborder="0" allowfullscreen></iframe>

mixin backButton
  div
    a(href="/") Back

doctype html
html(lang='en')
  head
    meta(charset="utf-8")
    title Video Contest

  body
    block content
    
